<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center_vertical"
>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_gravity="center_vertical"
                  android:gravity="center_vertical"
                  android:id="@+id/phone1LL"
                  android:layout_margin="@dimen/_10dp"
    >
        <TextView android:id="@+id/phoneImg"
                   android:layout_width="28dp"
                  android:layout_height="28dp"
                  android:textColor="@color/main_txt_black"
                  android:textSize="18sp"
                  android:background="@drawable/phone_call"
        />

        <TextView android:id="@+id/phone"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:textColor="@color/main_txt_black"
                  android:textSize="18sp"
                  android:text="1234567890abcde12"
                  android:layout_marginRight="4dp"
                  android:layout_marginLeft="4dp"
                  android:singleLine="true"
        />
        <TextView android:id="@+id/dateTime"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/color_small_gray"
                  android:textSize="18sp"
                  android:text="2016-04-08 14:37"
                  android:singleLine="true"
        />

    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/bg_line"
            android:layout_below="@+id/head_photo"
            android:layout_alignLeft="@+id/head_photo"
            android:layout_marginRight="@dimen/msg_margin"
    />
</LinearLayout>